{   
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "airbnb/hooks", "eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "it": true,
    "expect": true,
    "sinon": true
  },
  "plugins": ["react-hooks"],
  "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
  }
}